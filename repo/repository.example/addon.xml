<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.directwatch"
       name="IDTV"
       version="1.0.0"
       provider-name="IDTV dev">
  <requires>
    <import addon="xbmc.python" version="3.0.0" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Addon for direct streaming from external sources</summary>
    <description lang="en">Watch movies, TV shows and direct links via Kodi</description>
    <language>en</language>
    <platform>all</platform>
    <assets>
      <icon>icon.png</icon>
      <fanart>fanart.jpg</fanart>
    </assets>
  </extension>
</addon>
